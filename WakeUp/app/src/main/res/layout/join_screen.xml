<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joinGroupID"
        android:layout_gravity="center_horizontal"
        android:hint="Group ID"
        android:editable="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/joinPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:editable="true" />
    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/joinInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:id="@+id/joinButton"
        android:layout_gravity="center_horizontal"
        android:onClick="joinButtonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or Create a new Group"
        android:id="@+id/createGroupButton"
        android:layout_gravity="center_horizontal"
        android:onClick="createGroupButtonPressed" />
</LinearLayout>