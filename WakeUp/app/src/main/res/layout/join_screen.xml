<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:src="@drawable/sleepsmart555"
            android:layout_marginLeft="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="JOIN GROUP"
            android:id="@+id/joinGroup"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/joinGroupId"
        android:layout_gravity="center_horizontal"
        android:hint="Group ID"
        android:editable="true"
        android:background="#ffffffff" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/joinPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:editable="true"
        android:background="#ffffffff"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/joinInfo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:id="@+id/button2"
        android:onClick="joinButtonPressed"
        android:background="#ffffffff"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="70dp"
        />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:id="@+id/button3"
        android:onClick="createGroupButtonPressed"
        android:background="#ffffffff"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinProgressBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:progressTint="#ff6a8759" />

</LinearLayout>