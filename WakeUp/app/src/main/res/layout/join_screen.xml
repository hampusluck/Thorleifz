<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25b347"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="88dp"
            android:id="@+id/imageView3"
            android:src="@drawable/sleepsmart555"
            android:layout_weight="0.15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JOIN GROUP"
            android:id="@+id/joinGroup"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/joinGroupId"
        android:layout_gravity="center_horizontal"
        android:hint="Group ID"
        android:editable="true"
        android:background="#ffffffff" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/joinPassword"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:editable="true"
        android:background="#ffffffff"
        android:layout_marginTop="5dp" />
    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/joinInfo"/>

    <Button
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="JOIN"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="joinButtonPressed"
        android:background="#ffffffff"
        android:textColor="#25b347"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.07" />

    <Button
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="createGroupButtonPressed"
        android:background="#ffffffff"
        android:textColor="#25b347"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.06" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinProgressBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:progressTint="#ff6a8759" />

</LinearLayout>