<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thorleifz.wakeup.CreateNewGroup"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupID"
        android:layout_gravity="center_horizontal"
        android:hint="Group ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group ID must be unique"
        android:id="@+id/createGroupIDInfo" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/groupName"
        android:layout_gravity="center_horizontal"
        android:hint="Group Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createGroupPassword1"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:singleLine="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createGroupPassword2"
        android:layout_gravity="center_horizontal"
        android:hint="Repeat Password" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/createGroupPasswordInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/createGroupConfirmButton"
        android:layout_gravity="center_horizontal"
        android:onClick="createGroupConfirmButtonPressed" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createGroupProgressBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true" />

</LinearLayout>
