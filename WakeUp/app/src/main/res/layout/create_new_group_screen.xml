<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="thorleifz.wakeup.CreateNewGroup"
    android:orientation="vertical"
    android:background="#25b347">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/">

        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="116dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_marginBottom="60dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="88dp"
                android:id="@+id/imageView3"
                android:src="@drawable/alarm_grey"
                android:layout_weight="0.15"
                android:layout_marginTop="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CREATE GROUP"
                android:id="@+id/textView2"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/groupID"
        android:layout_gravity="center_horizontal"
        android:hint="Group ID must be unique"
        android:background="#ffffffff"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/groupName"
        android:layout_gravity="center_horizontal"
        android:hint="Group Name"
        android:background="#ffffffff"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createGroupPassword1"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:singleLine="false"
        android:background="#ffffffff"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/createGroupPassword2"
        android:layout_gravity="center_horizontal"
        android:hint="Repeat Password"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:id="@+id/createGroupPasswordInfo"/>

    <Button
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:id="@+id/createGroupConfirmButton"
        android:layout_gravity="center_horizontal"
        android:onClick="createGroupConfirmButtonPressed"
        android:background="#ffffffff"
        android:textColor="#25b347"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="15dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createGroupProgressBar"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true" />

</LinearLayout>
