<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thorleifz.wakeup.InsideGroup"
    android:orientation="horizontal"
    android:focusable="false">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:id="@+id/membersListView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Alarm"
        android:id="@+id/myAlarmInfoTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="22:00"
        android:id="@+id/myAlarmTimeTextView"
        android:layout_below="@+id/myAlarmInfoTextView"
        android:textColor="#ff787878"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/setAlarmButton"
        android:onClick="setAlarmButtonPressed"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/InsideGroupSwitch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/updateButton"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setAlarmButton"
        android:onClick="updateMembers" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InsideGroupSwitch"
        android:layout_below="@+id/setAlarmButton"
        android:layout_alignParentEnd="true"
        android:background="#ff27681b"
        android:textOn="On"
        android:textOff="Off"
        android:paddingRight="20dp" />

</RelativeLayout>
